<h1><%= @cocktail.name %></h1>
<h3><%= @cocktail.description %></h3>
<%=  cl_image_tag @cocktail.picture, height: 300, width: 400, crop: :fill %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> : <%= dose.description %> | <%= link_to "❌", dose_path(dose.id), method: :delete %></li>

    <hr>
  <% end %>
</ul>

<%= link_to "➕ Add Ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "< Back to Cocktails", root_path %>

